{
  "swagger": "2.0",
  "info": {
    "title": "InterSystems IRIS REST API ingestion demo",
    "description": "A simple REST interface to evaluate the ingestion speed of an InterSystems IRIS REST API",
    "contact": {
      "name": "InterSystems Community",
      "url": "https://openexchange.intersystems.com/"
    },
    "license": {
      "name": "MIT license",
      "url": "https://github.com/dootje-2004/intersystems-rest-demo/blob/main/LICENSE.txt"
    },
    "version": "0.0.1"
  },
  "host": "localhost:9091",
  "basePath": "/csp/demo/rest",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "post": {
        "description": "Allows upload of a single item",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "payload",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/Payload"
            },
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Object has been saved",
            "schema": {
              "$ref": "#/definitions/StatusObject"
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/StatusObject"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Payload": {
      "type": "object",
      "properties": {
        "timestamp": {
          "description": "Client timestamp",
          "type": "string"
        },
        "message": {
          "description": "Arbitrary string",
          "type": "string"
        }
      }
    },
    "StatusObject": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "OK",
            "ERROR"
          ]
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}